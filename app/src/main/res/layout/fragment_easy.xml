<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_message"
        style="@style/TextStyle.Explain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/xui_config_color_gray_5"
        android:gravity="start"
        android:padding="16dp"
        android:singleLine="false"
        android:textColor="@color/xui_config_color_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <Button
            android:id="@+id/btn_default"
            style="@style/Button.Blue.wrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认更新" />

        <Button
            android:id="@+id/btn_auto"
            style="@style/Button.Blue.wrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="自动模式" />

        <Button
            android:id="@+id/btn_force"
            style="@style/Button.Blue.wrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="强制更新" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/btn_background_update"
            style="@style/Button.Blue.wrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支持后台更新" />


        <Button
            android:id="@+id/btn_update_entity"
            style="@style/Button.Blue.wrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="直接传入UpdateEntity进行更新" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/btn_custom_style"
            style="@style/Button.Blue.wrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义更新样式" />

        <Button
            android:id="@+id/btn_custom_check"
            style="@style/Button.Blue.wrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="自定义版本检查（主动检查）" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/btn_aria_download"
            style="@style/Button.Blue.wrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用Aria实现断点续传下载" />


    </LinearLayout>


</LinearLayout>